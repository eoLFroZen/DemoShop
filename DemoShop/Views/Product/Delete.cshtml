@model Product

<h1>Delete Product</h1>

<form asp-action="DeleteConfirm" asp-route-id="@Model.Id">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" value="@Model.Name" disabled>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" value="@Model.Price" disabled>
    </div>
    <div class="form-group">
        <label>Stock</label>
        <input type="number" class="form-control" value="@Model.Stock" disabled>
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>