@model Product

<h1>Edit Product</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Enter name" name="name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" placeholder="Enter price" name="price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label>Stock</label>
        <input type="number" class="form-control" placeholder="Enter stock" name="stock" value="@Model.Stock">
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>